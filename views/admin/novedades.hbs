<div id="contenedor">
    <section>
        <div class="container" style="margin-top: 20px">
            {{!-- fila 1 --}}
            <div class="row">
                <p class="text-end">¡Hola, {{usuario}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar
                        sesión</a></p>
            </div>
            {{!-- fin fila 1 --}}
            {{!-- fila 2 --}}
        <div class="row">
            <div class="col-lg-7">
                <h3>Listado de Novedades</h3>
            </div>  
            <div class="col-lg-5 text-end"> 
                <a href="/admin/novedades/agregar"> <i class="fas fa-plus-circle iconoadmin iconoverde"></i></a>
            </div> 
        </div>
            {{!-- fin fila 2 --}}
            {{!-- fila 3 --}}
        <div class="row">
            <table class="table">
            <thead>
                <tr class="table-primary">
                <th scope="col">#</th>
                <th scope="col">Título</th>
                <th scope="col">Imagen</th>                
                <th scope="col" class="text-end">Acciones</th>

                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td>{{{imagen}}}</td>                 
                <td class="text-end">
                    <a href="/admin/novedades/modificar/{{id}}"> <i class="fas fa-edit iconoadmin"></i></a>
                    <a href="/admin/novedades/eliminar/{{id}}"> <i class="fas fa-trash-alt iconoadmin" aria-hidden="true"></i></a>
                </td>               
                </tr>
                {{/each}}
            </tbody>
            </table>           
        </div>
            {{!-- fin fila 3 --}}
        </div>
        {{#if messages}}
            <p>{{messages}}</p>
        {{/if}}          
    </section>
    <aside>
        <figure>
            <blockquote class="blockquote">
                <p>El mundo es un libro, y quienes no viajan leen sólo una página.</p>
            </blockquote>
            <figcaption class="blockquote-footer text-end">
                <cite title="Source Title">San Agustín</cite>
            </figcaption>
        </figure>
    </aside>
</div>